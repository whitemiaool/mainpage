<style>
    *{
        margin: 0px;
        padding: 0px;
    }
    @keyframes mymove {
        from {left:0px;}
        to {left:200px;}
    }
    body {
        overflow: hidden;
        background: url('/images/back.jpg') left top fixed;
        background-size: auto;
    }
    .wrap {
        width: 100%;
        position: relative;
        box-sizing: border-box;
        height: calc(25vh - 10px);
        transform: translateX(100%);
    }

    .head {
        height: 40px;
        background: #2178e4;
        position: relative;
    }
    .circle>a {
        text-decoration: none;
        font-size: 20px;
        color: #fff;
        position: absolute;
        text-align: center;
        width: 100%;
        height: 100%;
        cursor: pointer;
        display: inline-block;
        overflow: hidden;
    }
    article {
        min-width: 1366px;
    }
    .title {
        color: #fff;
        font-size: 16px;
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        left: 100px;
    }
    .bar {
        color: #fff;
        position: absolute;
        right: 20px;
        top: 50%;
        transform: translateY(-50%);
    }
    .one {
        width: 25vw;
    }
    .two {
        width: 50vw;
    }
    .three {
        width: 75vw;
    }
    .four {
        width: 100%;
    }
    .name {
        display: inline-block;
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        z-index: 2;
    }
    .circle {
        background: rgba(45, 45, 45, 0.5);;
        height: 100%;
        position: relative;
        float: right;
        box-sizing: border-box;
        border-top: 1px solid #ccc;
        transition: all 1s;
    }
    .circle:hover a:after{
        background: rgba(40, 35, 255, 0.5);
        width: 200vw;
        height: 200vw;
    }
    a::after {
        content: '';
        position: absolute;
        width: 0px;
        height: 0px;
        top: 50%;
        left: 50%;
        border-radius: 50%;
        transform: translate(-50%,-50%);
        transition: all 1s;
    }
    .circle:hover .name {
        color: #da4646;
    }
</style>
<body>
    <header>
